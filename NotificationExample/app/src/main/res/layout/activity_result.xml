<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context="com.tibaes.notificationexample.ResultActivity">

    <TextView
        android:id="@+id/txt_frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você não pode impedir as mudanças, assim como não pode impedir o pôr do sol."
        android:textSize="24sp"
        android:textColor="#FFF"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/star_wars"/>



</LinearLayout>
